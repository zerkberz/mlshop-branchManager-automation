<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SHOP" thread-count="6" >
    <listeners>
        <listener class-name="utilities.ExtentReport.ExtentReporter" />
<!--        <listener class-name="utilities.RetryAnalyzer.RetryTransformer"/>-->
    </listeners>

<!--    Admin   -->
    <test name="LOG IN">
        <parameter name="browser" value="chrome"/>
        <parameter name="role" value="login"/>
        <classes>
            <class name="MLShop_Admin.actual.Login"/>
        </classes>
    </test>

    <test name="LOG IN Admin">
        <parameter name="browser" value="chrome"/>
        <parameter name="role" value="admin"/>
        <classes>
<!--            <class name="MLShop_Admin.actual.Dashboard"/>-->
            <class name="MLShop_Admin.actual.Orders"/>
<!--            <class name="MLShop_Admin.actual.Seller"/>-->
            <class name="MLShop_Admin.actual.Reports_ProductList"/>
            <class name="MLShop_Admin.actual.Reports_ProductInventory"/>
            <class name="MLShop_Admin.actual.Reports_SalesReport"/>
        </classes>
    </test>


</suite>
